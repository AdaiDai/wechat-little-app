<view class="head">
  <!--用一个循环创建三个标题-->
  <block wx:for-items="{{titles}}" wx:for-item="title">
              
                <view class="title-item">
                      
                      <!--上面的图片-->
                      <image class="title-item-image" src="{{title.url}}" />
                      
                      <!--下面的文字-->
                      <text class="title-item-content">{{title.title}}</text>

                </view>
              
    </block>


</view>

<view class="body">
   
                            
                
     
                        <scroll-view class="scroll-view" scroll-x="true" style="width: 100%" bindscrolltoupper="left" 
bindscrolltolower="right" bindscroll="scroll" scroll-into-view="{{toView}}" scroll-left="{{scrollTop}}">
                    
                            <view class="scroll-view-item bc_red"></view>
                            <view class="scroll-view-item bc_yellow"></view>
                            <view class="scroll-view-item bc_blue"></view>
                        </scroll-view>
                
            

</view>